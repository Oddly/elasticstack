instances:
{% for host in groups[elasticstack_elasticsearch_group_name]  %}
  - name: "{{ host }}" 
    ip: 
      - "{{ hostvars[host].ansible_facts.default_ipv4.address | default(hostvars[host].ansible_facts.all_ipv4_addresses[0]) }}"
    dns: 
      - "{{ hostvars[host].ansible_facts.fqdn }}"
{% endfor %}
